#strip --strip-debug --strip-unneeded Debug/GNU-Linux/chrisos
qemu-system-i386 							\
	-m 1536								\
	-smp 4    							\
	-usb                                            		\
	-boot order=d							\
	-drive file=./myos.iso,if=none,id=sata-cd-0,format=raw 			\
	-drive file=/home/yogi/chrisos.img,if=none,id=sata-disk-0,format=raw 	\
	-device ahci,id=ahci0 					\
	-device ide-cd,drive=sata-cd-0,bus=ahci0.1			\
        -device ide-hd,drive=sata-disk-0,bus=ahci0.0 		\
	-serial file:"qemu_port.log"					\
	--machine type=pc-1.0					\
#	-d int -no-reboot -no-shutdown				\
#	-d int,cpu_reset,pcall,guest_errors                        		\
	$@ 
