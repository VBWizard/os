#!/bin/bash
./makeall
#if [ $? -ne 0 ] 
#then
#exit -1
#fi
#strip --strip-debug --strip-unneeded Debug/GNU-Linux-x86/chrisos
DISPLAY=":0.0" qemu-system-i386 							\
	-m 2048                                                         \
        -usb                                                            \
        -cdrom myos.iso         \
        -boot order=d                                                   \
        -drive file=./myos.iso,if=none,id=sata-cd-0,format=raw                  \
        -drive file=/home/yogi/chrisos.img,if=none,id=sata-disk-0       \
        -device ahci,id=ahci0                                   \
        -device ide-cd,drive=sata-cd-0,bus=ahci0.1                      \
        -device ide-hd,drive=sata-disk-0,bus=ahci0.0            \
        -serial file:"qemu_port.log"                                    \
	-S -s								\
	-d int,cpu_reset,pcall,guest_errors                                     \
	$1 $2
#	--enable-kvm
	#-machine accel=tcg					  	\	

#drive=/home/yogi/qemu-usb-mass-storage.dsk
#-hda ~/diskimage.img

