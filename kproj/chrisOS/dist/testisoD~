#!/bin/bash
./makeall
if [ $? -ne 0 ] 
then
exit -1
fi
#strip --strip-debug --strip-unneeded Debug/GNU-Linux/chrisos
qemu-system-i386 							\
	-m 2047								\
	-smp 4    							\
	-boot order=d							\
        -drive file=./myos.iso,if=none,id=sata-cd-0,format=raw                  \
        -drive file=/home/yogi/chrisos.img,index=6,format=raw,cache=none,if=none,id=sata-disk-0 \
	-drive file=/dev/sdc,index=4,format=raw,cache=none,if=none,id=sata-disk-1 \
	-device ich9-ahci,id=ahci0 					\
	-device ich9-ahci,id=ahci1 					\
        -device ide-drive,drive=sata-disk-0,bus=ahci0.0                 \
        -device ide-cd,drive=sata-cd-0,bus=ahci1.0                      \
	-device ide-drive,drive=sata-disk-1,bus=ahci0.1                 \
	-serial file:"qemu_port.log"					\
	-d int,cpu_reset,pcall,guest_errors                        		\
	$@ 
#	--enable-kvm

#drive=/home/yogi/qemu-usb-mass-storage.dsk
#-hda ~/diskimage.img
#-device ide-drive,drive=sata-disk-2,bus=ahci1.0                \
#        -cdrom myos.iso         \

